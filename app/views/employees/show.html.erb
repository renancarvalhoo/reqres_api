<div class="page-wrapper">
  <div class="page-header d-print-none">
    <div class="container-xl">
      <div class="row g-2 align-items-center">
        <div class="col">
          <h2 class="page-title">
            Employees
          </h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
          <div class="d-flex">
            <%= link_to "Back to employees", employees_path, class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="page-body">
    <div class="container-xl">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Employee info</h3>
        </div>
        <div class="card-body">
          <div class="datagrid">
            <div class="datagrid-item">
              <div class="datagrid-title">Employee</div>
              <div class="datagrid-content">
                <div class="d-flex align-items-center">
                  <%= link_to @employee['avatar'], target: :_blank do %>
                    <%= image_tag(@employee['avatar'], class: "avatar avatar-xs me-2 rounded") %>
                  <% end %>
                  <%= @employee['first_name'] %> <%= @employee['last_name'] %>
                </div>
              </div>
            </div>
            <div class="datagrid-item">
              <div class="datagrid-title">Name</div>
              <div class="datagrid-content"><%= @employee['first_name'] %> <%= @employee['last_name'] %></div>
            </div>
            <div class="datagrid-item">
              <div class="datagrid-title">Email</div>
              <div class="datagrid-content"><%= @employee['email'] %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>